@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />


<!-- HERO -->
<section class="position-relative hero-section d-flex align-items-center text-white">

    <!-- Background -->
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <img src="~/images/winkel/witbrood.jpg" 
             alt="Vers gebakken brood"
             class="w-100 h-100 object-fit-cover" />
        <div class="position-absolute top-0 start-0 w-100 h-100 hero-overlay"></div>
    </div>

    <!-- Content -->
    <div class="container position-relative z-1">
        <div class="col-lg-6">

            <h1 class="display-4 fw-bold mb-4">
                Ambachtelijk brood & patisserie
            </h1>

            <p class="lead mb-4 opacity-90">
                Welkom bij Davalie. Al meer dan 25 jaar lang bakken wij met
                liefde en vakmanschap de lekkerste broden en taartjes voor u.
            </p>

            <div class="d-flex flex-column flex-sm-row gap-3">
                <a asp-controller="Assortiment"
                   asp-action="Index"
                   class="btn btn-primary btn-lg">
                    Bekijk ons assortiment →
                </a>

                <a asp-controller="Home"
                   asp-action="Contact"
                   class="btn btn-outline-light btn-lg">
                    Openingsuren
                </a>
            </div>
        </div>
    </div>
</section>

<!-- FEATURES -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 text-center">
            @foreach (var item in new[]
                        {
                        ("Dagvers Gebakken", "Elke dag vers uit onze oven.", "wheat"),
                        ("Ambachtelijk", "Traditionele recepten, met de hand bereid.", "heart"),
                        ("Al 25 jaar", "Bakkerij met jaren ervaring.", "clock"),
                        ("Topkwaliteit", "Enkel de beste grondstoffen.", "award")
                        })
            {
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="card h-100 shadow-sm border-0 feature-card">
                        <div class="card-body">
                            <div class="feature-icon-wrap mb-3 mx-auto">
                                <img src="@Url.Content($"~/icons/{item.Item3}.svg")"
                                     class="feature-icon"
                                     alt="@item.Item1" />

                            </div>

                            <h5 class="fw-semibold">@item.Item1</h5>
                            <p class="text-muted small mb-0">@item.Item2</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<!-- PRODUCT HIGHLIGHTS -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Ons Assortiment</h2>
            <p class="text-muted">
                Ontdek onze selectie van dagvers gebakken producten.
            </p>
        </div>

        <div class="row g-4">
            @foreach (var item in new[]
                        {
                        ("Brood", "Van knapperig wit tot volkoren", "rozijnenbrood.jpg", "brood"),
                        ("Taarten", "Voor elke gelegenheid", "marbre-groot.jpg", "taarten"),
                        ("Patisserie", "Koeken en gebakjes", "soirees.jpg", "koeken"),
                        })
            {
                <div class="col-md-4">
                    <a asp-controller="Assortiment"
                       asp-action="Index"
                       asp-fragment="@item.Item4"
                       class="card h-100 text-decoration-none text-dark shadow-sm product-card">

                        <img src="@Url.Content($"~/images/winkel/{item.Item3}")"
                             class="card-img-top"
                             alt="@item.Item1" />

                        <div class="card-body">
                            <h5 class="fw-semibold">@item.Item1</h5>
                            <p class="text-muted small">@item.Item2</p>
                            <span class="text-primary fw-medium">
                                Bekijk meer →
                            </span>
                        </div>
                    </a>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Assortiment"
               asp-action="Index"
               class="btn btn-primary btn-lg">
                Volledig assortiment →
            </a>
        </div>
    </div>
</section>

<!-- OPENING HOURS -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">Openingsuren</h2>

                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between border-bottom py-2">
                        <span>Maandag</span><span>07:30 - 18:00</span>
                    </li>
                    <li class="d-flex justify-content-between border-bottom py-2">
                        <span>Dinsdag</span><span>07:30 - 16:00</span>
                    </li>
                    <li class="d-flex justify-content-between border-bottom py-2 opacity-75">
                        <span>Woensdag</span><span>Gesloten</span>
                    </li>
                    <li class="d-flex justify-content-between border-bottom py-2 opacity-75">
                        <span>Donderdag</span><span>Gesloten</span>
                    </li>
                    <li class="d-flex justify-content-between border-bottom py-2">
                        <span>Vrijdag</span><span>07:30 - 18:00</span>
                    </li>
                    <li class="d-flex justify-content-between border-bottom py-2">
                        <span>Zaterdag</span><span>07:00 - 17:00</span>
                    </li>
                    <li class="d-flex justify-content-between py-2">
                        <span>Zondag</span><span>07:00 - 13:00</span>
                    </li>
                </ul>
            </div>

            <div class="col-lg-6">
                <div class="bg-white text-dark rounded p-4 shadow">
                    <h4 class="fw-semibold mb-3">Bezoek onze bakkerij</h4>

                    <p class="mb-2">
                        <strong>Adres</strong><br />
                        Noordstraat 17<br />
                        8800 Roeselare
                    </p>

                    <p class="mb-4">
                        <strong>Telefoon</strong><br />
                        051 22 02 87
                    </p>

                    <a asp-controller="Contact"
                       asp-action="Index"
                       class="btn btn-outline-primary w-100">
                        Meer contactinfo
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
