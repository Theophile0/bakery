@{
    ViewData["Title"] = "Pagina niet gevonden";
    Layout = "_Layout";
}

<section class="py-5" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 text-center">

                <!-- Big 404 -->
                <div class="mb-4">
                    <span class="display-1 fw-bold text-primary">404</span>
                </div>

                <!-- Message -->
                <h1 class="fw-bold mb-3">
                    Deze pagina staat niet in onze winkel
                </h1>

                <p class="lead text-muted mb-4">
                    Onze oven draait nog volop, maar deze pagina bestaat helaas niet (meer).
                </p>

                <p class="text-muted mb-5">
                    Misschien is de link verkeerd of verouderd.
                    Geen zorgen we helpen je graag verder.
                </p>

                <!-- Actions -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="btn btn-primary btn-lg">
                        Terug naar home
                    </a>

                    <a asp-controller="About"
                       asp-action="Index"
                       class="btn btn-outline-primary btn-lg">
                        Over Davalie
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
